<UserControl x:Class="WPFInventory.MVM.View.DiscoveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFInventory.MVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#464566">
    <Grid>
        <TextBlock Grid.Row="1"
                   Text="Mobile Phone Inventory System Categories"
                   Foreground="White"
                   FontFamily="Bahnschrift Light Condensed"
                   FontSize="28"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"/>
        <DataGrid HorizontalAlignment="Left" Height="130" 
                  Margin="120,95,0,0" VerticalAlignment="Top" 
                  Width="604" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGrid_SelectionChanged"/>


    </Grid>
</UserControl>
